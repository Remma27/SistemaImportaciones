@model Sistema_de_Gestion_de_Importaciones.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<link rel="stylesheet" href="~/css/auth.css" />

<div class="min-vh-75 d-flex align-items-start pt-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6 col-lg-5">
                <div class="card shadow-sm" style="border-radius: 10px; border: none;">
                    <div class="card-body p-3">
                        <div class="text-center mb-3">
                            <h2 class="fw-bold">Iniciar Sesión</h2>
                            <p class="text-muted mb-2">Ingresa tus credenciales para continuar</p>
                        </div>
                        
                        <form method="post" asp-action="IniciarSesion" asp-controller="Auth">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control" placeholder="nombre@ejemplo.com" required />
                                <label asp-for="Email">Correo electrónico</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            
                            <div class="form-floating mb-4">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" required />
                                <label asp-for="Password">Contraseña</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-auth">
                                    Ingresar
                                </button>
                            </div>
                        </form>
                        
                        <div class="text-center mt-3">
                            <p class="mb-0">¿No tienes una cuenta? 
                                <a asp-action="Registrarse" asp-controller="Auth" class="text-primary fw-bold">
                                    Regístrate aquí
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
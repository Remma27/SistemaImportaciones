@{
    ViewData["Title"] = "Iniciar Sesion";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container-fluid vh-75 d-flex justify-content-center align-items-center bg-white mt-5">
    <div class="card shadow-sm" style="max-width: 500px; width: 100%; border-radius: 10px;">
        <div class="card-body">
            <h2 class="text-center mb-4">Iniciar Sesion</h2>
            <form asp-action="IniciarSesion" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label for="email">Correo Electronico</label>
                    <input type="email" class="form-control" id="email" name="Email" placeholder="Ingrese su correo electronico">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="Password" placeholder="Ingrese su contraseña">
                </div>
                <button type="submit" class="btn btn-dark btn-block mt-4">Iniciar Sesion</button>
            </form>
            <div class="text-center mt-3">
                <p>¿No tienes una cuenta? <a href="@Url.Action("Registrarse", "Auth")" class="text-primary">Regístrate aquí</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
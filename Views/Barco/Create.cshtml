@model Sistema_de_Gestion_de_Importaciones.Models.Barco

@{
    ViewData["Title"] = "Crear Barco";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white py-3">
                    <h3 class="card-title mb-0">Registrar Nuevo Barco</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="NombreBarco" class="form-label"></label>
                                <input asp-for="NombreBarco" class="form-control" placeholder="Ingrese el nombre del barco"/>
                                <span asp-validation-for="NombreBarco" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <h5 class="mb-3">Capacidad de Escotillas (Toneladas)</h5>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Escotilla1" class="form-label">Escotilla 1</label>
                                <input asp-for="Escotilla1" class="form-control" type="number" />
                                <span asp-validation-for="Escotilla1" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Escotilla2" class="form-label">Escotilla 2</label>
                                <input asp-for="Escotilla2" class="form-control" type="number" />
                                <span asp-validation-for="Escotilla2" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Escotilla3" class="form-label">Escotilla 3</label>
                                <input asp-for="Escotilla3" class="form-control" type="number" />
                                <span asp-validation-for="Escotilla3" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Escotilla4" class="form-label">Escotilla 4</label>
                                <input asp-for="Escotilla4" class="form-control" type="number" />
                                <span asp-validation-for="Escotilla4" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Escotilla5" class="form-label">Escotilla 5</label>
                                <input asp-for="Escotilla5" class="form-control" type="number" />
                                <span asp-validation-for="Escotilla5" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Escotilla6" class="form-label">Escotilla 6</label>
                                <input asp-for="Escotilla6" class="form-control" type="number" />
                                <span asp-validation-for="Escotilla6" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Escotilla7" class="form-label">Escotilla 7</label>
                                <input asp-for="Escotilla7" class="form-control" type="number" />
                                <span asp-validation-for="Escotilla7" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
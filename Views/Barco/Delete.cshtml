@using Sistema_de_Gestion_de_Importaciones.Models
@model Sistema_de_Gestion_de_Importaciones.Models.Barco

@{
    ViewData["Title"] = "Eliminar Barco";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white py-3">
                    <h3 class="card-title mb-0">Confirmar Eliminación</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        ¿Está seguro que desea eliminar este barco?
                    </div>
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2">Detalles del Barco</h5>
                        <div class="row mt-3">
                            <div class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.nombrebarco)</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.nombrebarco)</div>
                        </div>
                        <div class="mt-3">
                            <h6 class="text-muted mb-2">Capacidad de Escotillas</h6>
                            <div class="row g-2">
                                @for (int i = 1; i <= 7; i++)
                                {
                                    <div class="col-auto">
                                        <span class="badge bg-info">
                                            E@(i): @(typeof(Barco).GetProperty($"Escotilla{i}")?.GetValue(Model) ?? 0)
                                        </span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="id" />
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Volver
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

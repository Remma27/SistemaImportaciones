@model IEnumerable<API.Models.Barco>

@{
    ViewData["Title"] = "Barcos";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0">Gesti√≥n de Barcos</h3>
                </div>
                <div class="col text-end">
                    <a asp-action="Create" class="btn btn-light">
                        <i class="fas fa-plus-circle me-1"></i>Nuevo Barco
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.nombrebarco)</th>
                            <th>Escotillas (Toneladas)</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.nombrebarco)</td>
                            <td>
                                <div class="row g-2">
                                    <div class="col-auto"><span class="badge bg-info">E1: @(item.escotilla1 ?? 0)</span></div>
                                    <div class="col-auto"><span class="badge bg-info">E2: @(item.escotilla2 ?? 0)</span></div>
                                    <div class="col-auto"><span class="badge bg-info">E3: @(item.escotilla3 ?? 0)</span></div>
                                    <div class="col-auto"><span class="badge bg-info">E4: @(item.escotilla4 ?? 0)</span></div>
                                    <div class="col-auto"><span class="badge bg-info">E5: @(item.escotilla5 ?? 0)</span></div>
                                    <div class="col-auto"><span class="badge bg-info">E6: @(item.escotilla6 ?? 0)</span></div>
                                    <div class="col-auto"><span class="badge bg-info">E7: @(item.escotilla7 ?? 0)</span></div>
                                </div>
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

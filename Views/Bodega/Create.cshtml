@model API.Models.Empresa_Bodegas

@{
    ViewData["Title"] = "Nueva Bodega";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white py-3">
                    <h3 class="card-title mb-0">Registrar Nueva Bodega</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label asp-for="bodega" class="form-label">Nombre de la Bodega</label>
                            <input asp-for="bodega" class="form-control" placeholder="Ingrese el nombre de la bodega" required />
                            <span asp-validation-for="bodega" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

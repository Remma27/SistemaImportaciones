@model Sistema_de_Gestion_de_Importaciones.Models.Bodega

@{
    ViewData["Title"] = "Editar Bodega";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark py-3">
                    <h3 class="card-title mb-0">Editar Bodega</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="id" />
                        <div class="mb-3">
                            <label asp-for="bodega" class="form-label">Nombre de la Bodega</label>
                            <input asp-for="bodega" class="form-control" />
                            <span asp-validation-for="bodega" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model API.Models.Empresa

@{
    ViewData["Title"] = "Crear Empresa";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white py-3">
                    <h3 class="card-title mb-0">Crear Nueva Empresa</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="mb-3">
                            <label asp-for="nombreempresa" class="form-label"></label>
                            <input asp-for="nombreempresa" class="form-control" placeholder="Ingrese el nombre de la empresa" />
                            <span asp-validation-for="nombreempresa" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="estatus" class="form-label"></label>
                            <select asp-for="estatus" class="form-select">
                                <option value="1">Activo</option>
                                <option value="2">Inactivo</option>
                            </select>
                            <span asp-validation-for="estatus" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
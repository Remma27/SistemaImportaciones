@model Sistema_de_Gestion_de_Importaciones.Models.Empresa

@{
    ViewData["Title"] = "Eliminar Empresa";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white py-3">
                    <h3 class="card-title mb-0">Confirmar Eliminación</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        ¿Está seguro que desea eliminar esta empresa?
                    </div>
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2">Detalles de la Empresa</h5>
                        <div class="row mt-3">
                            <div class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.NombreEmpresa)</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.NombreEmpresa)</div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Estatus)</div>
                            <div class="col-sm-8">
                                @if (Model.Estatus == 1)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactivo</span>
                                }
                            </div>
                        </div>
                    </div>
                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="IdEmpresa" />
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Volver
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

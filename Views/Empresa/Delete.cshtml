@model API.Models.Empresa

@{
    ViewData["Title"] = "Eliminar Empresa";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-danger text-white py-3">
            <h3 class="mb-0">Eliminar Empresa</h3>
        </div>
        <div class="card-body">
            <h5>¿Está seguro que desea eliminar esta empresa?</h5>
            <div class="mt-4">
                <dl class="row">
                    <dt class="col-sm-3">Nombre</dt>
                    <dd class="col-sm-9">@Model.nombreempresa</dd>
                    <dt class="col-sm-3">Estado</dt>
                    <dd class="col-sm-9">
                        @(Model.estatus == 1 ? "Activo" : "Inactivo")
                    </dd>
                </dl>
            </div>
            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="id_empresa" />
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>

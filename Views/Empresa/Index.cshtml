@model IEnumerable<API.Models.Empresa>

@{
    ViewData["Title"] = "Empresas";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-primary text-white py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0">Gesti√≥n de Empresas</h3>
                </div>
                <div class="col text-end">
                    <a asp-controller="Empresa" asp-action="Create" class="btn btn-light">
                        <i class="fas fa-plus-circle me-1"></i>Nueva Empresa
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info" role="alert">
                    @ViewBag.Message
                </div>
            }
            <div class="table-responsive">
                @if (!Model.Any())
                {
                    <div class="alert alert-info">
                        No hay empresas registradas en el sistema.
                    </div>
                }
                else
                {
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.nombreempresa)</th>
                                <th>@Html.DisplayNameFor(model => model.estatus)</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.nombreempresa)</td>
                                <td>
                                    @if (item.estatus == 1)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactivo</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-controller="Empresa" asp-action="Edit" asp-route-id="@item.id_empresa" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-controller="Empresa" asp-action="Delete" asp-route-id="@item.id_empresa" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</div>

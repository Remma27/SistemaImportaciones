@model Sistema_de_Gestion_de_Importaciones.ViewModels.CambiarPasswordViewModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
}

<link rel="stylesheet" href="~/css/gestion-usuarios.css" asp-append-version="true" />

<div class="container-fluid px-4">
    <div class="dashboard-header shadow-sm rounded mb-4">
        <h1><i class="fas fa-key me-2"></i> Cambiar Contraseña</h1>
    </div>

    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Home">Inicio</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Gestión de Usuarios</a></li>
            <li class="breadcrumb-item active">Cambiar Contraseña</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card user-management-card mb-4 form-card">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-key text-dark me-2"></i> Cambiar Contraseña de Usuario</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4 bg-light p-3 rounded fade-in">
                        <div class="d-flex align-items-center">
                            <div class="avatar avatar-md me-3 bg-primary rounded-circle text-center text-white">
                                <span style="font-size:1.2rem">@(Model.NombreUsuario?.Substring(0, 1).ToUpper() ?? "U")</span>
                            </div>
                            <div>
                                <h5 class="mb-1">@Model.NombreUsuario</h5>
                                <p class="mb-0 text-muted">@Model.Email</p>
                            </div>
                        </div>
                    </div>

                    <form asp-action="CambiarPassword" class="fade-in">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="UsuarioId" />
                        <input type="hidden" asp-for="NombreUsuario" />
                        <input type="hidden" asp-for="Email" />

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-bold">Nueva Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" class="form-control" autocomplete="new-password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirmar Nueva Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <div class="d-flex">
                                <div class="me-3">
                                    <i class="fas fa-info-circle fa-2x"></i>
                                </div>
                                <div>
                                    <h6 class="alert-heading mb-1">Requisitos de contraseña</h6>
                                    <p class="mb-0 small">La contraseña debe tener al menos 6 caracteres de longitud.</p>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4 mobile-stack">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i> Cambiar Contraseña
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card user-management-card sidebar-nav">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="fas fa-shield-alt text-primary me-2"></i> Consejos de Seguridad</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Las contraseñas son la primera línea de defensa contra accesos no autorizados.
                    </div>

                    <h6 class="fw-bold mb-3"><i class="fas fa-check-circle text-success me-2"></i>Recomendaciones</h6>
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item bg-transparent px-0">
                            <i class="fas fa-check text-success me-2"></i> Use al menos 8 caracteres
                        </li>
                        <li class="list-group-item bg-transparent px-0">
                            <i class="fas fa-check text-success me-2"></i> Incluya letras mayúsculas y minúsculas
                        </li>
                        <li class="list-group-item bg-transparent px-0">
                            <i class="fas fa-check text-success me-2"></i> Incluya números y símbolos especiales
                        </li>
                        <li class="list-group-item bg-transparent px-0">
                            <i class="fas fa-check text-success me-2"></i> Evite información personal
                        </li>
                    </ul>

                    <h6 class="fw-bold mb-3"><i class="fas fa-times-circle text-danger me-2"></i>Evite</h6>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-transparent px-0">
                            <i class="fas fa-times text-danger me-2"></i> Contraseñas obvias como "123456"
                        </li>
                        <li class="list-group-item bg-transparent px-0">
                            <i class="fas fa-times text-danger me-2"></i> Palabras comunes o nombres
                        </li>
                        <li class="list-group-item bg-transparent px-0">
                            <i class="fas fa-times text-danger me-2"></i> Reutilizar contraseñas de otros sitios
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
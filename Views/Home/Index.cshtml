@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Authentication

@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">

        <!-- Preferences Card -->
        <div class="col-12 col-md-10 col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cog me-2"></i>
                        Preferencias
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <a href="@Url.Action("Index", "Empresa")"
                                        class="btn btn-link text-dark text-decoration-none">
                                        <i class="fas fa-building me-2"></i>Empresas
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a href="@Url.Action("Index", "Barco")"
                                        class="btn btn-link text-dark text-decoration-none">
                                        <i class="fas fa-ship me-2"></i>Barcos
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a href="@Url.Action("Index", "Importacion")"
                                        class="btn btn-link text-dark text-decoration-none">
                                        <i class="fas fa-file-import me-2"></i>Importaciones
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a href="@Url.Action("Index", "Bodega")"
                                        class="btn btn-link text-dark text-decoration-none">
                                        <i class="fas fa-warehouse me-2"></i>Bodegas
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Operations Card -->
        <div class="col-12 col-md-10 col-lg-8 mb-4">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-tasks me-2"></i>
                        Operaciones
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-12">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <a href="@Url.Action("Index", "RegistroRequerimientos")"
                                        class="btn btn-link text-dark text-decoration-none">
                                        <i class="fas fa-clipboard-list me-2"></i>Registro de Requerimientos de
                                        Importación
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a href="@Url.Action("Index", "RegistroPesajes")"
                                        class="btn btn-link text-dark text-decoration-none">
                                        <i class="fas fa-weight me-2"></i>Registro de Pesajes de Camiones con Grana
                                    </a>
                                </li>
                                <li class="list-group-item">
                                    <a href="@Url.Action("Index", "InformeGeneral")"
                                        class="btn btn-link text-dark text-decoration-none">
                                        <i class="fas fa-chart-bar me-2"></i>Informe General
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

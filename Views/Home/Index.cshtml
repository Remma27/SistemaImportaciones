@using Microsoft.AspNetCore.Authentication.Cookies
@using Microsoft.AspNetCore.Authentication

@{
    ViewData["Title"] = "Menu";
}

<style>
    .menu-link {
        padding: 0.8rem 0.5rem;
        border-radius: 6px;
        transition: all 0.2s ease;
    }

    .menu-link:hover {
        background-color: rgba(0, 0, 0, 0.05);
        transform: translateX(5px);
    }

    .list-group-item {
        border: none;
        padding: 0.5rem 0;
    }

    .card {
        border-radius: 10px;
        transition: all 0.3s ease;
    }

    .card:hover {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }

    .card-header {
        border-top-left-radius: 10px !important;
        border-top-right-radius: 10px !important;
        padding: 1rem 1.5rem;
    }
</style>

<div class="container-fluid mt-5">
    <div class="row justify-content-center">

        @if (User.IsInRole("Reporteria"))
        {
            <div class="col-12 col-md-10 col-lg-7 mb-5">
                <div class="card shadow">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-bar me-2"></i>
                            Reportes
                        </h5>
                    </div>
                    <div class="card-body py-4">
                        <div class="row">
                            <div class="col-12">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <a href="@Url.Action("Index", "InformeGeneral")"
                                            class="d-flex align-items-center text-dark text-decoration-none menu-link">
                                            <i class="fas fa-chart-bar me-3 text-info"></i>
                                            <span>Informe General</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-12 col-md-10 col-lg-7 mb-5">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-cog me-2"></i>
                            Preferencias
                        </h5>
                    </div>
                    <div class="card-body py-4">
                        <div class="row">
                            <div class="col-12">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <a href="@Url.Action("Index", "Empresa")"
                                            class="d-flex align-items-center text-dark text-decoration-none menu-link">
                                            <i class="fas fa-building me-3 text-primary"></i>
                                            <span>Empresas</span>
                                        </a>
                                    </li>
                                    <li class="list-group-item">
                                        <a href="@Url.Action("Index", "Barco")"
                                            class="d-flex align-items-center text-dark text-decoration-none menu-link">
                                            <i class="fas fa-ship me-3 text-primary"></i>
                                            <span>Barcos</span>
                                        </a>
                                    </li>
                                    <li class="list-group-item">
                                        <a href="@Url.Action("Index", "Importacion")"
                                            class="d-flex align-items-center text-dark text-decoration-none menu-link">
                                            <i class="fas fa-file-import me-3 text-primary"></i>
                                            <span>Importaciones</span>
                                        </a>
                                    </li>
                                    <li class="list-group-item">
                                        <a href="@Url.Action("Index", "Bodega")"
                                            class="d-flex align-items-center text-dark text-decoration-none menu-link">
                                            <i class="fas fa-warehouse me-3 text-primary"></i>
                                            <span>Bodegas</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-10 col-lg-7 mb-5">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-tasks me-2"></i>
                            Operaciones
                        </h5>
                    </div>
                    <div class="card-body py-4">
                        <div class="row">
                            <div class="col-12">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <a href="@Url.Action("Index", "RegistroRequerimientos")"
                                            class="d-flex align-items-center text-dark text-decoration-none menu-link">
                                            <i class="fas fa-clipboard-list me-3 text-success"></i>
                                            <span>Registro de Requerimientos de Importación</span>
                                        </a>
                                    </li>
                                    <li class="list-group-item">
                                        <a href="@Url.Action("Index", "RegistroPesajes")"
                                            class="d-flex align-items-center text-dark text-decoration-none menu-link">
                                            <i class="fas fa-weight me-3 text-success"></i>
                                            <span>Registro de Pesajes de Camiones con Grana</span>
                                        </a>
                                    </li>
                                    <li class="list-group-item">
                                        <a href="@Url.Action("Index", "InformeGeneral")"
                                            class="d-flex align-items-center text-dark text-decoration-none menu-link">
                                            <i class="fas fa-chart-bar me-3 text-success"></i>
                                            <span>Informe General</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            @if (User.IsInRole("Administrador"))
            {
                <div class="col-12 col-md-10 col-lg-7 mb-5">
                    <div class="card shadow">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-shield-alt me-2"></i>
                                Administración
                            </h5>
                        </div>
                        <div class="card-body py-4">
                            <div class="row">
                                <div class="col-12">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item">
                                            <a href="@Url.Action("Index", "GestionUsuarios")"
                                                class="d-flex align-items-center text-dark text-decoration-none menu-link">
                                                <i class="fas fa-users-cog me-3 text-danger"></i>
                                                <span>Gestión de Usuarios</span>
                                            </a>
                                        </li>
                                        <li class="list-group-item">
                                            <a href="@Url.Action("Index", "HistorialView")"
                                                class="d-flex align-items-center text-dark text-decoration-none menu-link">
                                                <i class="fas fa-history me-3 text-danger"></i>
                                                <span>Historial del Sistema</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
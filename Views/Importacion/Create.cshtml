@model API.Models.Importacion

@{
    ViewData["Title"] = "Nueva Importación";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white py-3">
                    <h3 class="card-title mb-0">Registrar Nueva Importación</h3>
                </div>
                
                @section Scripts {
                    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="fechahora" class="form-label">Fecha y Hora</label>
                                <input asp-for="fechahora" class="form-control" type="datetime-local" />
                                <span asp-validation-for="fechahora" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="idbarco" class="form-label">Barco</label>
                                <select asp-for="idbarco" class="form-select" asp-items="ViewBag.Barcos">
                                    <option value="">Seleccione un barco</option>
                                </select>
                                <span asp-validation-for="idbarco" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="totalcargakilos" class="form-label">Total Carga (Kilos)</label>
                                <input asp-for="totalcargakilos" class="form-control" type="number" />
                                <span asp-validation-for="totalcargakilos" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

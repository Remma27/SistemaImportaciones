@model API.Models.Importacion

@{
    ViewData["Title"] = "Eliminar Importación";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white py-3">
                    <h3 class="card-title mb-0">Confirmar Eliminación</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        ¿Está seguro que desea eliminar esta importación?
                    </div>
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2">Detalles de la Importación</h5>
                        <div class="row mt-3">
                            <div class="col-sm-4 text-muted">Fecha y Hora</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.fechahora)</div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-4 text-muted">Barco</div>
                            <div class="col-sm-8">@(Model.Barco?.nombrebarco != null ? Html.DisplayFor(model => Model.Barco!.nombrebarco) : Html.Raw("No especificado"))</div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-4 text-muted">Total Carga</div>
                            <div class="col-sm-8">@Html.DisplayFor(model => model.totalcargakilos) kg</div>
                        </div>
                    </div>
                    <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="id" />
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Volver
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Eliminar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

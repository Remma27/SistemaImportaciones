@model Sistema_de_Gestion_de_Importaciones.Models.Importacion

@{
    ViewData["Title"] = "Editar Importación";
}

<div class="container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark py-3">
                    <h3 class="card-title mb-0">Editar Importación</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaHora" class="form-label">Fecha y Hora</label>
                                <input asp-for="FechaHora" class="form-control" type="datetime-local" />
                                <span asp-validation-for="FechaHora" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="IdBarco" class="form-label">Barco</label>
                                <select asp-for="IdBarco" class="form-select" asp-items="ViewBag.Barcos">
                                    <option value="">Seleccione un barco</option>
                                </select>
                                <span asp-validation-for="IdBarco" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="TotalCargaKilos" class="form-label">Total Carga (Kilos)</label>
                                <input asp-for="TotalCargaKilos" class="form-control" type="number" />
                                <span asp-validation-for="TotalCargaKilos" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

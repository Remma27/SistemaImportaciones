@model IEnumerable<Sistema_de_Gestion_de_Importaciones.Models.Importacion>

@{
    ViewData["Title"] = "Importaciones";
}

<div class="container-fluid ">
    <div class="card shadow ">
        <div class="card-header py-3">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="mb-0">Importaciones</h3>
                </div>
                <div class="col text-end">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Nueva Importaci√≥n
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FechaHora)</th>
                            <th>@Html.DisplayNameFor(model => model.Barco != null ? model.Barco.NombreBarco : "N/A")</th>
                            <th>@Html.DisplayNameFor(model => model.TotalCargaKilos)</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FechaHora)</td>
                            <td>@(item.Barco != null ? item.Barco.NombreBarco : "N/A")</td>
                            <td>@Html.DisplayFor(modelItem => item.TotalCargaKilos)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@model IEnumerable<Sistema_de_Gestion_de_Importaciones.Models.ViewModels.InformeGeneralViewModel>
@using Microsoft.AspNetCore.Mvc.Rendering
@using System.Linq

@{
    ViewData["Title"] = "Informe General";
    var modelData = Model ?? Enumerable.Empty<Sistema_de_Gestion_de_Importaciones.Models.ViewModels.InformeGeneralViewModel>();
    var selectedBarco = Context.Request.Query["selectedBarco"].ToString();
    var totales = new
    {
        RequeridoKg = modelData.Sum(x => x.RequeridoKg),
        DescargaKg = modelData.Sum(x => x.DescargaKg),
        FaltanteKg = modelData.Sum(x => x.FaltanteKg),
        CamionesFaltantes = modelData.Sum(x => x.CamionesFaltantes),
        ConteoPlacas = modelData.Sum(x => x.ConteoPlacas),
        PorcentajePromedio = modelData.Any() ? modelData.Average(x => x.PorcentajeDescarga) : 0
    };
}

<div class="container-fluid py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary bg-gradient text-white py-3">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <h3 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Informe General</h3>
                </div>
                <div class="col-md-4">
                    <form method="get" asp-action="Index" class="mb-0">
                        <div class="input-group">
                            <label class="input-group-text bg-primary text-white border-0">
                                <i class="fas fa-ship me-1"></i>
                            </label>
                            <select name="selectedBarco" 
                                    class="form-select" 
                                    asp-items="ViewBag.Barcos"
                                    onchange="this.form.submit()">
                                <option value="">Seleccione una Importaci贸n</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="col-md-4 text-end">
                    <div class="btn-group">
                        <button class="btn btn-light" id="exportToExcel" title="Exportar a Excel" disabled="@(!modelData.Any())">
                            <i class="fas fa-file-excel me-1"></i> Excel
                        </button>
                        <button class="btn btn-light" id="convertToLbs" title="Convertir a libras" disabled="@(!modelData.Any())">
                            <i class="fas fa-weight me-1"></i> Libras
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            @if (string.IsNullOrEmpty(selectedBarco))
            {
                <div class="alert alert-info m-4 text-center">
                    <i class="fas fa-info-circle fa-lg me-2"></i>
                    Seleccione una importaci贸n para ver el informe
                </div>
            }
            else if (!modelData.Any())
            {
                <div class="alert alert-warning m-4 text-center">
                    <i class="fas fa-exclamation-triangle fa-lg me-2"></i>
                    No hay datos disponibles para la importaci贸n seleccionada
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-bottom">Empresa</th>
                                <th class="border-bottom text-end">Requerido (Kg)</th>
                                <th class="border-bottom text-end">Descarga (Kg)</th>
                                <th class="border-bottom text-end">Faltante (Kg)</th>
                                <th class="border-bottom text-end">Camiones Faltantes</th>
                                <th class="border-bottom text-end">Placas</th>
                                <th class="border-bottom text-end">% Descarga</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in modelData)
                            {
                                <tr>
                                    <td>@item.Empresa</td>
                                    <td class="text-end">@item.RequeridoKg.ToString("N2")</td>
                                    <td class="text-end">@item.DescargaKg.ToString("N2")</td>
                                    <td class="text-end">@item.FaltanteKg.ToString("N2")</td>
                                    <td class="text-end">@item.CamionesFaltantes</td>
                                    <td class="text-end">@item.ConteoPlacas</td>
                                    <td class="text-end">@item.PorcentajeDescarga.ToString("N2")%</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-primary fw-bold">
                            <tr>
                                <td>TOTALES</td>
                                <td class="text-end">@totales.RequeridoKg.ToString("N2")</td>
                                <td class="text-end">@totales.DescargaKg.ToString("N2")</td>
                                <td class="text-end">@totales.FaltanteKg.ToString("N2")</td>
                                <td class="text-end">@totales.CamionesFaltantes</td>
                                <td class="text-end">@totales.ConteoPlacas</td>
                                <td class="text-end">@totales.PorcentajePromedio.ToString("N2")%</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/gh/linways/table-to-excel@v1.0.4/dist/tableToExcel.js"></script>
    <script>
        document.getElementById('exportToExcel').addEventListener('click', function () {
            let table = document.querySelector('table');
            let fileName = 'Informe_General_' + new Date().toISOString().slice(0,10);
            
            TableToExcel.convert(table, {
                name: fileName + '.xlsx',
                sheet: {
                    name: 'Informe General'
                }
            });
        });

        document.getElementById('convertToLbs').addEventListener('click', function() {
            const kgToLbs = 2.20462;
            const cells = document.querySelectorAll('td.text-end');
            
            cells.forEach(cell => {
                const text = cell.textContent;
                if (text.includes('Kg')) {
                    const value = parseFloat(text);
                    if (!isNaN(value)) {
                        const lbs = (value * kgToLbs).toFixed(2);
                        cell.textContent = text.replace(/[\d.,]+/g, lbs).replace('Kg', 'Lbs');
                    }
                }
            });
            
            // Actualizar encabezados
            const headers = document.querySelectorAll('th');
            headers.forEach(header => {
                if (header.textContent.includes('Kg')) {
                    header.textContent = header.textContent.replace('Kg', 'Lbs');
                }
            });
            
            this.disabled = true;
        });

        // Agregar animaci贸n de carga al formulario
        document.querySelector('form').addEventListener('submit', function() {
            const select = this.querySelector('select');
            const currentText = select.options[select.selectedIndex].text;
            select.disabled = true;
            select.parentElement.insertAdjacentHTML('beforeend', 
                '<div class="position-absolute end-0 me-2 spinner-border spinner-border-sm text-primary"></div>');
        });
    </script>
}
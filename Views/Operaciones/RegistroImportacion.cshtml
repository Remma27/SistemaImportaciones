@using Sistema_de_Gestion_de_Importaciones.Models.ViewModels
@model IEnumerable<Sistema_de_Gestion_de_Importaciones.Controllers.MovimientoController.RegistroImportacionViewModel>
@{
    ViewData["Title"] = "Registro de Requerimientos de Importación";
}

<div class="container-fluid mt-3">
    <div class="card shadow">
        <div class="card-header py-3 ">
            <div class="row align-items-center">
                <div class="col-md-4">
                    <h3 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Registro de Requerimientos de Importación
                    </h3>
                </div>
                <div class="col-md-4">
                    <div class="input-group">
                        <label class="input-group-text">Importación</label>
                        <select class="form-select" id="importacionSelect">
                            @foreach (var item in (IEnumerable<SelectListItem>)ViewBag.Importaciones)
                            {
                                <option value="@item.Value" selected="@item.Selected">
                                    @item.Text
                                </option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="informeTable">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Barco</th>
                            <th>Empresa</th>
                            <th class="text-end">KG Requeridos</th>
                            <th class="text-end">Cant. Camiones</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.NombreBarco</td>
                                    <td>@item.NombreEmpresa</td>
                                    <td class="text-end">@item.CantidadRequerida.ToString("N2")</td>
                                    <td class="text-end">@item.CantidadCamiones</td>
                                    <td>
                                        <button class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center">Seleccione una importación para ver los datos.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
        $(document).ready(function() {
            try {
                // Debug logs
                console.log('Estado inicial:', {
                    jqueryVersion: $.fn.jquery,
                    hasDataTable: typeof $.fn.DataTable === 'function',
                    tableExists: $('#informeTable').length > 0,
                    rowCount: $('#informeTable tbody tr').length
                });

                // Inicialización simple
                if ($('#informeTable').length) {
                    $('#informeTable').DataTable({
                        autoWidth: false,
                        info: false,
                        paging: false,
                        searching: true,
                        ordering: true,
                        order: [[0, 'desc']],
                        language: {
                            search: "Buscar:",
                            zeroRecords: "No se encontraron registros coincidentes",
                            emptyTable: "Seleccione una importación para ver los datos"
                        },
                        columnDefs: [
                            { targets: 6, orderable: false }
                        ]
                    });
                }

                // Cambio de importación
                $('#importacionSelect').on('change', function() {
                    var importacionId = $(this).val();
                    console.log('Cambiando importación:', importacionId);
                    
                    if (importacionId) {
                        window.location.href = '/Operaciones/RegistroImportacion?importacionId=' + importacionId;
                    } else {
                        window.location.href = '/Operaciones/RegistroImportacion';
                    }
                });

            } catch (error) {
                console.error('Error al inicializar:', error);
            }
        });
    </script>
}
@model List<Sistema_de_Gestion_de_Importaciones.ViewModels.RegistroRequerimientosViewModel>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Registro de Requerimientos";
    var selectedBarco = Context.Request.Query["selectedBarco"].ToString();
}

<div class="container-fluid py-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary bg-gradient text-white py-3">
            <div class="row g-3">
                <!-- Título -->
                <div class="col-12 col-md-6 col-lg-4">
                    <h3 class="mb-0 text-center text-md-start"><i class="fas fa-clipboard-list me-2"></i>Registro de
                        Requerimientos</h3>
                </div>

                <!-- Selector de importación -->
                <div class="col-12 col-md-6 col-lg-4">
                    <form method="get" asp-action="Index" class="mb-0">
                        <div class="input-group">
                            <label class="input-group-text bg-primary text-white border-0">
                                <i class="fas fa-ship me-1"></i>
                            </label>
                            <select name="selectedBarco" class="form-select" asp-items="ViewBag.Barcos"
                                onchange="this.form.submit()">
                                <option value="">Seleccione una Importación</option>
                            </select>
                        </div>
                    </form>
                </div>

                <!-- Botón de acción -->
                <div class="col-12 col-md-12 col-lg-4 text-center text-lg-end">
                    @if (!string.IsNullOrEmpty(selectedBarco))
                    {
                        <a asp-action="Create" asp-route-selectedBarco="@selectedBarco"
                            class="btn btn-light d-inline-flex align-items-center">
                            <i class="fas fa-plus me-2"></i> Nuevo Registro
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-light d-inline-flex align-items-center" disabled>
                            <i class="fas fa-plus me-2"></i> Nuevo Registro
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="card-body">
            @if (string.IsNullOrEmpty(selectedBarco))
            {
                <div class="alert alert-info m-4 text-center">
                    <i class="fas fa-info-circle fa-lg me-2"></i>
                    Seleccione una importación para ver los registros
                </div>
            }
            else if (Model == null || !Model.Any())
            {
                <div class="alert alert-warning m-4 text-center">
                    <i class="fas fa-exclamation-triangle fa-lg me-2"></i>
                    No hay registros disponibles
                </div>
            }
            else
            {
                <!-- Tabla responsiva mejorada -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Fecha</th>
                                <th class="d-none d-md-table-cell">Importación</th>
                                <th>Empresa</th>
                                <th>Cantidad</th>
                                <th class="d-none d-sm-table-cell">Camiones</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IdMovimiento</td>
                                    <td>@(item.FechaHora?.ToString("dd/MM/yy"))</td>
                                    <td class="d-none d-md-table-cell">@item.Importacion</td>
                                    <td>@item.Empresa</td>
                                    <td>@item.CantidadRequerida kg</td>
                                    <td class="d-none d-sm-table-cell">@item.CantidadCamiones</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.IdMovimiento"
                                            asp-route-selectedBarco="@selectedBarco" class="btn btn-sm btn-warning me-1"
                                            title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdMovimiento"
                                            asp-route-selectedBarco="@selectedBarco" class="btn btn-sm btn-danger"
                                            title="Eliminar">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Tabla de totales responsiva -->
                @if (Model?.Any() == true)
                {
                    var totalRequerida = Model.Sum(x => x.CantidadRequerida);
                    var totalCamiones = Model.Sum(x => x.CantidadCamiones);

                    <div class="table-responsive mt-3">
                        <table class="table table-secondary mb-0">
                            <tr>
                                <td></td>
                                <td></td>
                                <td class="d-none d-md-table-cell"></td>
                                <td class="text-end fw-bold">Totales:</td>
                                <td class="fw-bold">@totalRequerida kg</td>
                                <td class="d-none d-sm-table-cell fw-bold">@totalCamiones</td>
                                <td></td>
                            </tr>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('select[name="selectedBarco"]').addEventListener('change', function () {
            this.disabled = true;
            this.parentElement.insertAdjacentHTML('beforeend',
                '<div class="spinner-border spinner-border-sm text-primary position-absolute end-0 me-3" role="status">' +
                '<span class="visually-hidden">Cargando...</span></div>');
        });
    </script>
}
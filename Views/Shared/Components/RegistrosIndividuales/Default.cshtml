@model IEnumerable<Sistema_de_Gestion_de_Importaciones.ViewModels.RegistroPesajesIndividual>

<div class="col-lg-12">
    <div class="card mb-4 shadow">
        <div class="card-header bg-gradient bg-primary text-white py-3">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Registros de Pesaje</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-scroll">
                <table id="tabla1" class="table table-hover align-middle mb-0 table-fixed-header">
                    <thead>
                        <tr class="table-info-dark">
                            <th>Bodega</th>
                            <th>Guía</th>
                            <th>Guía Alterna</th>
                            <th>Placa</th>
                            <th>Placa Alterna</th>
                            <th>Peso Requerido</th>
                            <th>Peso Entregado</th>
                            <th class="text-end unit-toggle-columns">
                                <div>Entreg.</div>
                                <div><small>Lbs / Qq</small></div>
                            </th>
                            <th>Peso Faltante</th>
                            <th>Porcentaje</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="table-group-divider">
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="11" class="text-center">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle"></i>
                                        <span>No hay registros disponibles</span>
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Bodega</td>
                                    <td>@(string.IsNullOrEmpty(item.Guia) ? "-" : item.Guia)</td>
                                    <td>@(string.IsNullOrEmpty(item.GuiaAlterna) ? "-" : item.GuiaAlterna)</td>
                                    <td>@(string.IsNullOrEmpty(item.Placa) ? "-" : item.Placa)</td>
                                    <td>@(string.IsNullOrEmpty(item.PlacaAlterna) ? "-" : item.PlacaAlterna)</td>
                                    <td class="text-end">@item.PesoRequerido.ToString("N0")</td>
                                    <td class="text-end">@item.PesoEntregado.ToString("N0")</td>
                                    <td class="text-end unit-toggle-columns conversion-cell dual-value-cell">
                                        <span class="top-value">@((item.PesoEntregado * 2.20462M).ToString("N0")) lbs</span>
                                        <span class="divider"></span>
                                        <span class="bottom-value">@((item.PesoEntregado / 45.359237M).ToString("N2")) qq</span>
                                    </td>
                                    <td class="text-end">@item.PesoFaltante.ToString("N0")</td>
                                    <td class="text-end">@item.Porcentaje.ToString("N2")%</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="RegistroPesajes" 
                                               asp-action="Edit" 
                                               asp-route-id="@item.Id"
                                               asp-route-selectedBarco="@ViewBag.SelectedBarco"
                                               asp-route-empresaId="@ViewBag.EmpresaId"
                                               class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-controller="RegistroPesajes" 
                                               asp-action="Delete" 
                                               asp-route-id="@item.Id"
                                               asp-route-selectedBarco="@ViewBag.SelectedBarco"
                                               asp-route-empresaId="@ViewBag.EmpresaId"
                                               class="btn btn-danger btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                    @if (Model != null && Model.Any())
                    {
                        <tfoot class="table-group-divider">
                            <tr class="table-info-dark">
                                <td>Totales</td>
                                <td colspan="3"></td>
                                <td class="text-end">Cant. registros: @Model.Count()</td>
                                <td class="text-end">@(Model.LastOrDefault()?.PesoRequerido.ToString("N0") ?? "0")</td>
                                <td class="text-end">@Model.Sum(x => x.PesoEntregado).ToString("N0")</td>
                                <td class="text-end unit-toggle-columns conversion-cell dual-value-cell">
                                    <span class="top-value">@((Model.Sum(x => x.PesoEntregado) * 2.20462M).ToString("N0")) lbs</span>
                                    <span class="divider"></span>
                                    <span class="bottom-value">@((Model.Sum(x => x.PesoEntregado) / 45.359237M).ToString("N2")) qq</span>
                                </td>
                                <td class="text-end">@(Model.LastOrDefault()?.PesoFaltante.ToString("N0") ?? "0")</td>
                                <td class="text-end">@(Model.LastOrDefault()?.Porcentaje.ToString("N2") ?? "0")%</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
@model IEnumerable<Sistema_de_Gestion_de_Importaciones.ViewModels.TotalesPorBodegaViewModel>

<div class="col-12">
    <div class="card shadow">
        <div class="card-header bg-gradient bg-warning py-3">
            <h5 class="mb-0 text-dark"><i class="fas fa-warehouse me-2"></i>Totales por Bodega</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-scroll">
                <table id="tabla3" class="table table-striped table-hover align-middle mb-0 table-fixed-header">
                    <thead>
                        <tr class="table-warning-dark">
                            <th>Bodega</th>
                            <th class="text-end">Total Kilos</th>
                            <th class="text-center">Cantidad de Traslados</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || !Model.Any())
                        {
                            <tr>
                                <td colspan="10" class="text-center">
                                    <div class="alert alert-info mb-0">
                                        <i class="fas fa-info-circle"></i>
                                        <span>No hay registros disponibles</span>
                                    </div>
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Bodega</td>
                                    <td class="text-end">@item.TotalKilos.ToString("N2")</td>
                                    <td class="text-center">@item.CantidadMovimientos</td>
                                </tr>
                            }
                        }
                    </tbody>
                    @if (Model != null && Model.Any())
                    {
                        <tfoot>
                            <tr class="table-warning-dark">
                                <td>Totales</td>
                                <td class="text-end">@Model.Sum(x => x.TotalKilos).ToString("N2")</td>
                                <td class="text-center">@Model.Sum(x => x.CantidadMovimientos)</td>
                            </tr>
                        </tfoot>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
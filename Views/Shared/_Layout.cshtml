<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Gestión</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
    <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css" rel="stylesheet" />
    <style>
        .wrapper {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }
        main {
            flex: 1;
        }
    </style>
</head>
<body class="h-100">
    <div class="wrapper">
        <header class="bg-dark text-white py-3 mb-4">
            <div class="container">
                <div class="row align-items-center">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="col-md-6">
                            <a href="/" class="text-white text-decoration-none">
                                <h4 class="mb-0">
                                    <i class="fas fa-ship me-2"></i>Sistema de Importaciones
                                </h4>
                            </a>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="d-flex align-items-center justify-content-end">
                                <div class="me-4 ">
                                    <span class="badge bg-light text-dark">
                                        <i class="fas fa-user me-1"></i>
                                        Bienvenido, @User.Identity.Name
                                    </span>
                                </div>
                                <form asp-controller="Auth" asp-action="CerrarSesion" method="post">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="fas fa-sign-out-alt me-1"></i>Cerrar Sesión
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-12 text-center">
                            <h4 class="mb-0">
                                <i class="fas fa-ship me-2"></i>Sistema de Gestión de Importaciones
                            </h4>
                        </div>
                    }
                </div>
            </div>
        </header>

        <main role="main" class="container pb-3">
            @RenderBody()
        </main>

        <footer class="footer py-3 bg-light border-top mt-auto">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <span class="text-muted">
                            <i class="fas fa-copyright me-1"></i>2025 Sistema de Gestión de Importaciones
                        </span>
                    </div>
                    <div class="col-md-6 text-end">
                        <span class="text-muted">
                            <i class="fas fa-code me-1"></i>Desarrollado por Emmanuel Rodriguez
                        </span>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
